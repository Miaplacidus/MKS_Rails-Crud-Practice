<h1><%= @video.title %></h1>

<h3><%= @video.description %></h3>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%= @video.youtube_id %>" frameborder="0" allowfullscreen></iframe>
</br></br>

<%= form_tag("/videos/#{params[:id]}/comments", method: "post") do %>
  <%= label_tag('comment[content]', "Share your thoughts:") %>
  <%= text_area_tag('comment[content]') %><br>
  <%= submit_tag("submit") %>
<% end %>

</br>

<% @video.comments.each do |comment| %>
<%= comment.content %>
<%= form_tag("/videos/#{params[:id]}/comments/#{comment.id}", method: "delete") do %>
  <%= submit_tag("Delete") %>
<% end %>
</br>
<% end %>
